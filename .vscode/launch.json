{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Firefox",
            "type": "firefox",
            "request": "attach",
            "reAttach": true,
            "url": "http://localhost:5500/${relativeFileDirname}/index.html",
            "pathMappings": [
                {
                    "url": "http://localhost:5500/${relativeFileDirname}/",
                    "path": "${workspaceFolder}"
                }
            ]
        }
    ]
}
